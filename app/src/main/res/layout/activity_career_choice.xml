<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:orientation="vertical"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.activity.CareerChoiceActivity">
    <TextView
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/text_color"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/perfect_title"/>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信  用  卡:"/>
        <cn.com.stableloan.view.flowlayout_tag.TagFlowLayout
            android:id="@+id/id_flowlayout"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            zhy:max_select="1"
            app:gravity="left"
            android:layout_height="wrap_content">
        </cn.com.stableloan.view.flowlayout_tag.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名下房产:"/>
        <cn.com.stableloan.view.flowlayout_tag.TagFlowLayout
            android:id="@+id/house_flowlayout"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            zhy:max_select="1"
            app:gravity="left"
            android:layout_height="wrap_content">
        </cn.com.stableloan.view.flowlayout_tag.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名下汽车:"/>
        <cn.com.stableloan.view.flowlayout_tag.TagFlowLayout
            android:id="@+id/car_flowlayout"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            zhy:max_select="1"
            app:gravity="left"
            android:layout_height="wrap_content">
        </cn.com.stableloan.view.flowlayout_tag.TagFlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的职业:"/>
        <cn.com.stableloan.view.flowlayout_tag.TagFlowLayout
            android:id="@+id/occupation_flowlayout"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            zhy:max_select="1"
            app:gravity="left"
            android:layout_height="wrap_content">
        </cn.com.stableloan.view.flowlayout_tag.TagFlowLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCheck"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/CheckTheme"
            android:text="@string/insurance"
            android:textColor="@color/text_setting"
            android:textStyle="bold"
            android:textSize="13sp"
            />
        <!-- <TextView
             android:textStyle="bold"
             android:textSize="13sp"
             android:textColor="@color/colorPrimary"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/insurance"/>-->
    </LinearLayout>

   <!-- <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="立即申请"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/button_sure"
        />-->

    <cn.com.stableloan.view.supertextview.SuperButton
        android:id="@+id/bt_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="立即申请"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:sCornersRadius="10dp"
        app:sSelectorNormalColor="@color/colorPrimary"
        app:sSelectorPressedColor="@color/colorPrimaryDark"
        app:sUseSelector="true"
        />
</LinearLayout>
