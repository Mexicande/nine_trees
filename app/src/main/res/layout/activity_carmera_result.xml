<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.cashninetrees.ui.activity.CarmeraResultActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/image_back_layout"
            android:layout_width="50dp"
            android:layout_gravity="center|left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"
                android:src="@mipmap/iv_back"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="证件信息 "
            android:textSize="22sp"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/_50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_width="wrap_content"
                android:background="@drawable/image_box"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="@dimen/_10dp"
                    android:id="@+id/photoView"
                    android:layout_centerInParent="true"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/image_default"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/Card"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/select_text_color"
                />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.com.cashninetrees.view.RoundButton
                    android:id="@+id/bt_backButton"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:text="保存图片"
                    android:paddingLeft="@dimen/_30dp"
                    android:paddingRight="@dimen/_30dp"
                    app:btnCornerRadius="8dp"
                    app:btnPressedRatio="0.9"
                    app:btnSolidColor="@color/white"
                    app:btnStrokeWidth="1dp"
                    app:btnStrokeColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/select_text_color"
                    />
                <cn.com.cashninetrees.view.RoundButton
                    android:id="@+id/bt_saveButton"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    app:btnCornerRadius="8dp"
                    android:paddingLeft="@dimen/_30dp"
                    android:paddingRight="@dimen/_30dp"
                    app:btnPressedRatio="0.9"
                    app:btnSolidColor="@color/colorPrimary"
                    app:btnStrokeWidth="1dp"
                    app:btnStrokeColor="@color/frame_color"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="保存图片和文字"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
