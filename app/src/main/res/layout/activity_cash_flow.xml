<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:orientation="vertical"

    tools:context="cn.com.laifenqicash.ui.activity.cash.CashFlowActivity">
    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_y"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/text_setting"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/money"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/tv_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5.00"
                android:textColor="@color/select_text_color"
                android:textSize="30sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/status"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_setting"
            android:text="已完成"/>
        <View
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:background="@color/Normal_Button"
            android:layout_height="@dimen/_1dp"/>
        <RelativeLayout
            android:layout_marginBottom="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/select_text_color"
                android:text="到账账户:  "/>
            <TextView
                android:id="@+id/account"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/select_text_color"
                android:layout_height="wrap_content"
                android:text="支付宝\n862233523@qq.com"/>
            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/account"
                android:id="@+id/tv_createdtime"
                android:textSize="16sp"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起时间:  "/>
            <TextView
                android:layout_marginTop="@dimen/_10dp"

                android:id="@+id/created_at"
                android:textSize="16sp"
                android:layout_below="@id/account"
                android:layout_toRightOf="@id/tv_createdtime"
                android:layout_width="wrap_content"
                android:textColor="@color/select_text_color"
                android:layout_height="wrap_content"
                android:text="2017-07-07 17:17"/>
            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/created_at"
                android:id="@+id/tv_updatedtime"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成时间:  "/>
            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:id="@+id/updated_at"
                android:layout_below="@id/created_at"
                android:layout_toRightOf="@id/tv_updatedtime"
                android:layout_width="wrap_content"
                android:textColor="@color/select_text_color"
                android:layout_height="wrap_content"
                android:text="2017-07-07 17:17"/>

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/updated_at"
                android:id="@+id/tv_so"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起原因:  "/>
            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:id="@+id/title"
                android:layout_below="@id/updated_at"
                android:layout_toRightOf="@id/tv_so"
                android:layout_width="wrap_content"
                android:textColor="@color/select_text_color"
                android:layout_height="wrap_content"
                android:text="邀请好友填资料得现金"/>

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/title"
                android:id="@+id/tv_resault"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理结果:  "/>

            <TextView
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="16sp"
                android:id="@+id/resault"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/tv_resault"
                android:layout_width="wrap_content"
                android:textColor="@color/select_text_color"
                android:layout_height="wrap_content"
                android:text="完成"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
