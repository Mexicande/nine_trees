<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_bg"
    android:orientation="vertical"
    tools:context="cn.com.stableloan.ui.activity.cash.GetCashRule">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:paddingRight="@dimen/_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/back"/>
            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="如何获得现金"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_ExtractCash"
        android:layout_width="match_parent"
        android:layout_margin="18dp"
        android:visibility="gone"
        android:background="@drawable/inivte_background"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/select_text_color"
            android:text="期限前请填写完整的基本信息"/>
        <ImageView
            android:layout_marginTop="@dimen/_20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/iv_step1"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:textColor="@color/colorPrimary"
            android:text="填写基本信息"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"

            android:textColor="@color/select_text_color"
            android:text="银行卡提现功能敬请期待"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/iv_step_alipay"/>
            <ImageView
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/iv_step_bank"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"

            android:textColor="@color/select_text_color"
            android:text="节假日期间会有延迟，请见谅"/>
        <ImageView
            android:layout_marginTop="@dimen/_20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/iv_step_late"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"

            android:textColor="@color/select_text_color"
            android:text="账户满5元即可提现"/>
        <ImageView
            android:layout_marginTop="@dimen/_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/iv_step_packet"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_getCash"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="18dp"
            android:orientation="vertical"
            android:background="@drawable/inivte_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/select_text_color"
                android:text="方式一"/>

            <TextView
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/select_text_color"
                android:text="1.您的好友注册并填写申请资料"/>
            <ImageView
                android:id="@+id/textImage"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/invite_step"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/select_text_color"
                    android:text="2.每位好友填写申请资料，您获得1元
现金，100积分。"/>

            </LinearLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="41dp"
                android:layout_height="56dp"
                android:src="@mipmap/inivte_friend"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1元/好友"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="18dp"
            android:orientation="vertical"
            android:background="@drawable/inivte_background"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/select_text_color"
                android:text="方式二"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/select_text_color"
                android:text="做积分任务也可兑换现金"/>
            <ImageView
                android:layout_marginTop="@dimen/_20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="41dp"
                android:layout_height="56dp"
                android:src="@mipmap/inivte_friend"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
