<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_white"
    tools:context="cn.com.laifenqicash.ui.activity.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_goback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/iv_logo"/>
        <cn.com.laifenqicash.utils.editext.PowerfulEditText
            android:id="@+id/ed_phone"
            android:layout_marginTop="30dp"
            android:paddingLeft="25dp"
            android:layout_toRightOf="@id/phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingBottom="8dp"
            android:paddingRight="25dp"
            android:drawablePadding="15dp"
            app:leftDrawableWidth="20dp"
            app:leftDrawableHeight="20dp"
            android:drawableLeft="@mipmap/icon_phone"
            android:lines="1"
            android:hint="手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="15sp"
            android:background="@mipmap/icon_et_bg"
            android:textColorHint="@color/gay"
            app:theme="@style/MyEditText"
            app:funcType="canClear"
            />

        <RelativeLayout
            android:id="@+id/layout_Result"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_et_bg"
            android:layout_width="match_parent"
            android:paddingLeft="25dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/result"
                android:paddingBottom="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/verify_iv"
                android:layout_width="100dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <EditText
                android:id="@+id/et_Result"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/verify_iv"
                android:layout_toRightOf="@id/result"
                android:paddingBottom="8dp"
                android:textSize="15sp"
                android:textColorHint="@color/gay"
                android:theme="@style/MyEditText"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入结果"
                android:lines="1"
                android:maxLength="3"
                android:inputType="number"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_code"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <cn.com.laifenqicash.utils.editext.PowerfulEditText
                android:id="@+id/ed_code"
                android:layout_toRightOf="@id/phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingBottom="8dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:drawablePadding="15dp"
                app:leftDrawableWidth="20dp"
                app:leftDrawableHeight="20dp"
                android:drawableLeft="@mipmap/icon_pw"
                android:lines="1"
                android:hint="验证码"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="15sp"
                android:background="@mipmap/icon_et_bg"
                android:textColorHint="@color/gay"
                app:theme="@style/MyEditText"
                app:funcType="canWatchPwd"
                />
            <Button
                android:id="@+id/bt_code"
                android:layout_marginRight="40dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorPrimary"
                android:text="获取验证码"
                android:textSize="12sp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/code_bg"/>
        </RelativeLayout>



        <cn.com.laifenqicash.view.supertextview.SuperButton
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:sCornersRadius="12dp"
            android:text="立即登录"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:sSelectorDisableColor="@color/dispress_color"
            app:sUseSelector="true"
            android:enabled="false"
            app:sSelectorNormalColor="@color/colorPrimary"
            app:sSelectorPressedColor="@color/press_color"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />
    </LinearLayout>

    <TextView
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gay"
        android:text="贷款，投资你的明天"/>
</RelativeLayout>
