<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_white"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.laifenqicash.ui.activity.settingdate.SwitchPassWordActivity">
    <include layout="@layout/toolbar_layout"/>

    <cn.com.laifenqicash.view.supertextview.SuperTextView
        android:id="@+id/st_GestureOpen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftTextSize="@dimen/information_textSize"
        stv:sLeftTextString="手势密码开关"
        stv:sRightTextColor="@color/text_setting"
        stv:sLeftTextColor="@color/select_text_color"
        stv:sRightTextSize="@dimen/information_textSize"
        stv:sRightViewType="switchBtn"
        stv:sSwitchIsChecked="false"
        stv:sSwitchMinWidth="40dp"
        stv:sBottomDividerLineMarginLeft="10dp"
        stv:sBottomDividerLineMarginRight="10dp"
        stv:sThumbResource="@drawable/thumb"
        stv:sTrackResource="@drawable/track"
        stv:sDividerLineHeight="1dp"
        />


    <cn.com.laifenqicash.view.supertextview.SuperTextView
        android:id="@+id/st_CreateGesture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        stv:sLeftTextSize="@dimen/information_textSize"
        stv:sLeftTextString="重设手势"
        stv:sRightIconRes="@mipmap/iv_left"
        stv:sRightIconHeight="14dp"

        stv:sRightTextColor="@color/text_setting"
        stv:sLeftTextColor="@color/select_text_color"
        stv:sRightTextSize="@dimen/information_textSize"
        stv:sSwitchIsChecked="true"
        stv:sSwitchMinWidth="40dp"
        stv:sDividerLineHeight="0dp"
        />
</LinearLayout>
