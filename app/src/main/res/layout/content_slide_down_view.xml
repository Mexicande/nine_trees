<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:showIn="@layout/fragment_product">
    <LinearLayout
        android:id="@+id/slideView"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/_20dp"
                android:id="@+id/seekbar_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/_10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款金额"/>
                <cn.com.laifenqicash.view.seekbar.SeekbarWithIntervals
                    android:id="@+id/seekbarWithIntervals"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="@dimen/_10dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500元"/>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大于1万元"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_below="@id/seekbar_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20dp"
                android:baselineAligned="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份"
                    android:textSize="17dp"
                    android:textColor="@color/tag_textcolor"/>
                <cn.com.laifenqicash.view.flowlayout_tag.TagFlowLayout
                    android:id="@+id/id_flowlayout"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_width="match_parent"
                    zhy:max_select="1"
                    app:gravity="left"
                    android:layout_height="wrap_content">
                </cn.com.laifenqicash.view.flowlayout_tag.TagFlowLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="标签"
                    android:textSize="17dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/tag_textcolor"/>
                <cn.com.laifenqicash.view.flowlayout_tag.TagFlowLayout
                    android:id="@+id/tag_flowlayout"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_width="match_parent"

                    zhy:max_select="-1"
                    app:gravity="left"
                    android:layout_height="wrap_content">
                </cn.com.laifenqicash.view.flowlayout_tag.TagFlowLayout>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <cn.com.laifenqicash.view.RoundButton
                android:id="@+id/button"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="确认"
                app:btnPressedRatio="0.9"
                app:btnSolidColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#ffffff"
                />
            <cn.com.laifenqicash.view.RoundButton
                android:id="@+id/reset"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="重置"
                android:background="@drawable/ic_product_sure"
                app:btnPressedRatio="0.9"
                app:btnSolidColor="@color/white"
                app:btnStrokeColor="@color/frame_color"
                app:btnStrokeWidth="1dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/blacktext"
                />
        </LinearLayout>

        <LinearLayout
          android:id="@+id/layoutGo"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#50000000">
      </LinearLayout>

    </LinearLayout>

</LinearLayout>
