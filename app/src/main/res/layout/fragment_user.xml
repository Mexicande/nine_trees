<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f3f5"
    tools:context="cn.com.cashninetrees.ui.fragment.UserFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/layout_setting"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="45dp"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="35dp"
                android:src="@mipmap/iv_setting"/>
            <TextView
                android:id="@+id/tv_vip"
                android:layout_marginTop="40dp"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_vip"
                android:gravity="center"
                android:drawableLeft="@mipmap/center_vip"
                android:textColor="@color/white"
                android:background="@drawable/vip_bg"/>
            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/user_corrugated"/>
            <ImageView
                android:id="@+id/User_logo"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_userheader"/>

            <TextView
                android:id="@+id/tv_nick"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_above="@id/User_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
