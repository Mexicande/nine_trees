<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner_fresco_demo_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                style="@style/BannerDefaultStyle"
                app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointContainerBackground="@android:color/transparent"
                app:banner_transitionEffect="defaultEffect"
                android:scaleType="centerCrop"
                app:banner_aspectRatio="2.5"
                android:adjustViewBounds="true"
                >
            </cn.bingoogolapple.bgabanner.BGABanner>
            <android.support.v7.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="1dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_20dp"
                    android:background="@color/color_f9"
                    android:layout_height="wrap_content">
                    <include layout="@layout/home_header_item"
                        />
                    <LinearLayout
                        android:paddingRight="@dimen/_10dp"
                        android:paddingLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/iv_job_identity"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/bussiones"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/iv_bussines_identity"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/iv_free"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/iv_free_identity"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_fire"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_fire"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_fire"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门推荐"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/select_text_color"
                    />
            </RelativeLayout>
</LinearLayout>