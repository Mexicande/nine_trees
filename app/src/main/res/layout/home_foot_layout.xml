<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/base_white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/layout_help"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_help"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_help"
                android:layout_toRightOf="@id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮你借"
                android:textSize="15sp"
                android:textColor="@color/color_33"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_help"
                android:layout_toRightOf="@id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线帮你贷"
                android:textSize="14sp"
                android:textColor="@color/gay"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="1dp"
            android:background="@color/color_e3"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/layout_att"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wechat"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_att"
                android:layout_toRightOf="@id/att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注公众号"
                android:textSize="15sp"
                android:textColor="@color/color_33"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_att"
                android:layout_toRightOf="@id/att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看100家产品"
                android:textSize="14sp"
                android:textColor="@color/gay"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>