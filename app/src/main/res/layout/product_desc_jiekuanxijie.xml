<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <LinearLayout
        android:paddingTop="10dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/line"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="4dp"
                android:background="@color/colorStatus"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text=" 借款详情"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/desc_left"
            android:textColor="@color/select_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/desc_left"
            android:textColor="@color/select_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/desc_left"
            android:textColor="@color/select_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/repayment_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/desc_left"
            android:textColor="@color/select_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="4dp"
                android:background="@color/colorStatus"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="推荐产品"
                android:textColor="@color/select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>